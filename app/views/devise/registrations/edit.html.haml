%h2
  Edit #{resource_name.to_s.humanize}
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signin", role: "form" } ) do |f|
  = devise_error_messages!
  %h2.form-signin-heading{style: " text-align:center;"} Sign up
  = f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email address", style: "width:300px;margin: 0 auto;"
  = f.text_field :name, class: "form-control", placeholder: "Mother/Father", style: "width:300px;margin: 0 auto;"
  = f.text_field :name2, class: "form-control", placeholder: "Father-to-Be/Mother-to-Be", style: "width:300px;margin: 0 auto;" 
  = f.text_field :due_date, class: "form-control", placeholder: "Due Date", style: "width:300px;margin: 0 auto;"
  / = f.label :conceive, class: "form-control", placeholder: "Trying to Conceive?", style: "width:300px;margin: 0 auto;"
  / = f.check_box :conceive, class: "form-control", placeholder: "Trying to Conceive?", style: "width:300px;margin: 0 auto;"
  = f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password", style: "width:300px;margin: 0 auto;", required: false
  = f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Password confirmation", style: "width:300px;margin: 0 auto;", required: false
  = f.submit "Sign up", class: "btn btn-lg btn-primary btn-block", style: "width: 400px;margin: 0 auto;margin-top:5px;"
= render "devise/shared/links"
%h3 Cancel my account
%p
  Unhappy? #{link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete}
= link_to "Back", :back
